{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  // AllowedHosts: Controls which host headers are accepted by the application
  // Default "*" allows any host (suitable for development/testing)
  // For production: Set ALLOWED_HOSTS environment variable to specific domains
  // Example: "recipe-manager-app.fly.dev;your-custom-domain.com"
  // This helps prevent host header injection attacks
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=recipemanager.db"
  },
  "Firebase": {
    "ProjectId": "",
    "Audience": ""
  },
  "R2": {
    "AccountId": "",
    "AccessKeyId": "",
    "SecretAccessKey": "",
    "BucketName": ""
  },
  "FileCache": {
    "MaxCacheSizeBytes": 104857600,
    "MaxFileSizeBytes": 10485760,
    "DefaultExpirationMinutes": 15
  }
}
